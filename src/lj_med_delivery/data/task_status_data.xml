<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="task_status_draft" model="lj_med_delivery.task_status">
            <field name="name">Draft</field>
            <field name="sequence">10</field>
            <field name="color">0</field>
            <field name="description">Task is in draft stage, not yet assigned or started.</field>
        </record>

        <record id="task_status_assigned" model="lj_med_delivery.task_status">
            <field name="name">Assigned</field>
            <field name="sequence">20</field>
            <field name="color">4</field>
            <field name="description">Task has been assigned to an employee and is ready to start.</field>
        </record>

        <record id="task_status_in_progress" model="lj_med_delivery.task_status">
            <field name="name">In Progress</field>
            <field name="sequence">30</field>
            <field name="color">7</field>
            <field name="description">Task is currently being worked on by the assigned employee.</field>
        </record>

        <record id="task_status_first" model="lj_med_delivery.task_status">
            <field name="name">第一次配送</field>
            <field name="sequence">31</field>
            <field name="color">71</field>
            <field name="description">處方籤首次配送，通常醫院領取</field>
        </record>

        <record id="task_status_second" model="lj_med_delivery.task_status">
            <field name="name">第二次配送</field>
            <field name="sequence">32</field>
            <field name="color">72</field>
            <field name="description">二簽</field>
        </record>

        <record id="task_status_third" model="lj_med_delivery.task_status">
            <field name="name">第三次配送</field>
            <field name="sequence">33</field>
            <field name="color">73</field>
            <field name="description">三簽</field>
        </record>

        <record id="task_status_completed" model="lj_med_delivery.task_status">
            <field name="name">Completed</field>
            <field name="sequence">40</field>
            <field name="color">10</field>
            <field name="description">Task has been successfully completed.</field>
        </record>

        <record id="task_status_cancelled" model="lj_med_delivery.task_status">
            <field name="name">Cancelled</field>
            <field name="sequence">99</field>
            <field name="color">1</field>
            <field name="description">Task has been cancelled and will not be completed.</field>
        </record>
    </data>
</odoo>
